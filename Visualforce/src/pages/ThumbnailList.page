<apex:page showHeader="false"  standardStylesheets="false" cache="false" doctype="html-5.0">
<c:App debug="true">
    <c:Page name="list"
            theme="touch"
            debug="true">
        <c:Header >
            <h1 style="font-size: 20px; margin: 0px;">All Users</h1>
        </c:Header>
        <c:Content >
            <c:ThumbnailList
                    sObjectType="User"
                    imageUrlField="FullPhotoUrl"
                    labelField="Name"
                    subLabelField="Phone"
                    sortByField="Name"
                    listFilter="true"
                    filter="recent"
                    nextPage="#userDetail"
                    debug="true"/>
        </c:Content>
    </c:Page>
    <c:Page name="userDetail"
            theme="touch"
            back="true"
            debug="true">
        <c:Header >
            <h1 style="font-size: 20px; margin: 0px;">User Detail</h1>
        </c:Header>
        <c:Content >
            <c:Detail sobject="User"
                          debug="true"/>
        </c:Content>
    </c:Page>
</c:App>
<style>
    [data-role="panel"][data-id="main"] [data-role="page"].ui-page .ui-content {
        background: white;
    }
    .ui-body-touch, .ui-overlay-touch {
        font-family: Helvetica, Arial, sans-serif
    }
</style>
</apex:page>
